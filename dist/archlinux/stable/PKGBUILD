pkgname=passcheck
pkgver=1
pkgrel=1
pkgdesc='Passphrase strength evaluater'
arch=('any')
url='https://github.com/maandree/passcheck'
license=('GPL3')
depends=('python3')
makedepends=('make' 'sed' 'coreutils' 'texinfo' 'gzip')
source=(https://github.com/maandree/passcheck/archive/$pkgver.tar.gz)
sha256sums=(ee7696f1d12ccb2d76a9b235fe759f899e4fca890852741937b0f0004ec534db)


build() {
  cd passcheck-$pkgver
  make
}

package() {
  cd passcheck-$pkgver
  make DESTDIR="$pkgdir" install
}

